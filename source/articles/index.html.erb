<section>
  <h1>
    Articles
  </h1>

  <div class='left-align'>
    <% data.blog.articles.categories.each do |category| %>
      <h2 class='bold medium'>
        <%= category.name.titleize %>
      </h2>

      <% category.articles.each do |article| %>
        <% slug = article.downcase.gsub(' ', '-') %>
        <p>
          <%= link_to article, "#{config.root_path}articles/#{category.name}/#{slug}", class: 'inline-link' %>
        </p>
      <% end %>
    <% end %>
  </div>
</section>
